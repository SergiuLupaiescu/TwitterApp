
<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <% if comment.user.image.present? %>
        <%= image_tag comment.user.image.to_s %>
      <% else %>
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      <% end %>
    </p>
  </figure>

  <div class="media-content">
    <div class="field">
      <%= comment.text %>
    </div>
    <small><%=comment.user.email%></small>  -  <small><%= time_ago_in_words(comment.tweet.created_at) %> ago</small>
    <% if current_user.id == comment.user_id %>
      <div class="block">
        <span class="tag is-success">
          <%= link_to "Edit Comment", edit_tweet_comment_path(id: comment.id, tweet_id: tweet_id)%>
        </span>

        <span class="tag is-danger"> Delete Comment
         <%= link_to "Delete Comment",tweet_comment_path(id: comment.id, tweet_id: tweet_id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?", turbo: true }, class: "delete is-small"%>
        </span>
      </div>
    <% end %>
  </div>
</article>

